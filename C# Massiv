using System;
namespace Lesson1
{
    class Program
    {
        static void Main(string[] args)
        {
            byte[] nums=new byte[5];//созданый массив с 5 элементами
            nums[0] = 250;
            nums[1] = 50;
            nums[2] = 20;
            nums[3] = 100;
            nums[4] = 25;
            //Console.WriteLine("El:" + nums[0]);


            string[] words = new string[] {"John","Bob","Alex"};

            words[1] = "Josh";

            for(byte i =0;i<nums.Length;i++)
                Console.WriteLine("El:" + words[i]);//вывод всех элементов массива здесь можно еще nums
        }
    }
}














using System;
namespace Lesson1
{
    class Program
    {
        static void Main(string[] args)
        {
            short[] numbers = new short[10];
            short summa = 0;

            for(byte i = 0; i < numbers.Length; i++)
            {
                Random random = new Random();//вызываем конструктор класса Random для создания объекта random
                numbers[i] = Convert.ToInt16(random.Next(-5,15));//вызываем метод Next класса Random для генерации случайного числа от 5 до 15 и преобразуем его в тип short с помощью метода Convert.ToInt16
                Console.WriteLine("EL:" + numbers[i]);
                summa+= numbers[i];
                
                    Console.WriteLine("Summa:"+summa);
                

            }
            {
                
            }
        }
    }
}













