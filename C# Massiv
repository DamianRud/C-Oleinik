using System;
namespace Lesson1
{
    class Program
    {
        static void Main(string[] args)
        {
            short[,] nums = {
            {4,5,7 },
            { 8,9,10},
            { 11,12,13},

            };
            foreach(short el in nums)
            {
                Console.WriteLine("El:"+el);
            }
        }
    }
}










using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        // Создаем список и сразу добавляем в него три числа
        List<int> numbers = new List<int>() {
            4, 6, 7
        };

        // Добавляем дополнительные числа в список
        numbers.Add(40);
        numbers.Add(100);
        numbers.Add(5);
        numbers.Remove(100); // Удаляем число 100 из списка)
        numbers.Reverse(); // Переворачиваем порядок элементов в списке

        // Перебираем список и выводим каждое число в консоль
        foreach (int el in numbers)
        {
            Console.WriteLine("El"+el);
        }

        // Чтобы консоль не закрылась сразу (необязательно)
        Console.ReadKey();
    }
}
